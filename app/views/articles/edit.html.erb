<h3 class='text-center'>Editing an Article</h3>
<div class='row'>
  <div class='col-md-12'>
    <%= form_with model: @article, html: { class: 'form-horizontal', role: 'form' } do |f| %>
      <% if @article.errors.any? %>
        <div class="card text-bg-danger">
          <div class='card-body'>
            <h2 class='card-title'>
              <%= pluralize(@article.errors.count, "error") %>
              Prohibited this article from beign saved:
            </h2>
            <div class='panel-text'>
              <ul>
                <% @article.errors.full_messages.each do |msg| %>
                <li>
                  <%= msg %>
                </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
    <div class='form-group'>
      <div class='control-label col-md-1'>
        <%= f.label :title %>
      </div>
      <div class='col-md-11'>
        <%= f.text_field :title, class: 'form-control', placeholder: 'Title of article', autofocus: true %>
      </div>
    </div>
    <div class='form-group'>
      <div class='control-label col-md-1'>
        <%= f.label :body %>
      </div>
      <div class='col-md-11'>
        <%= f.text_area :body, row: 10, class: 'form-control', placeholder: 'Body of article' %>
      </div>
    </div>
    <div class='form-group'>
      <div class='col-md-offset-1 col-md-11'>
        <%= f.submit 'Update Article', class: 'btn btn-primary btn-lg- pull-right' %>
      </div>
    </div>
    <% end %>
  </div>
</div>