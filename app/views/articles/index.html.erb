<%= link_to 'New Article', new_article_path, class: 'btn btn-primary btn-lg m-2', role: 'button', id: 'new-article-btn' %>

<% if @articles.empty? %>
  <h1 id='no-articles'>No Articles Created</h1>
<% else %>
  <% @articles.each do |article| %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title text-truncate">
          <%= link_to article.title, article_path(article) %>
        </h5>
        <p class="card-text text-truncate"><%= article.body %></p>
        <p class="card-text">
          <small class="text-muted">Created by: <%= article.user.email %></small>
        </p>
      </div>
    </div>
  <% end %>
<% end %>